
<!--css => app/assets/stylesheets/admins/admins-customers.scss-->

<div class="admins-customers">
  <h3 class="admins-customers__title">会員詳細</h3>

  <div class="admins-customers__show">
    <div class="container">
      <div class="row">
        <div class="col-sm-3 admins-customers__show-info">
          <table class="table table-hover">
            <tr>
              <th>姓　名</th>
              <td><%= @customer.last_name + "　" + @customer.first_name %></td>
            </tr>
            <tr>
              <th>セイ　メイ</th>
              <td><%= @customer.last_name_kana + "　" + @customer.first_name_kana %></td>
            </tr>
            <tr>
              <th>性別</th>
              <td><%= @customer.gender %></td>
            </tr>
            <tr>
              <th>年齢</th>
              <td><%= @customer.age %></td>
            </tr>
            <tr>
              <th>メールアドレス</th>
              <td><%= @customer.email %></td>
            </tr>
            <tr>
              <th>郵便番号</th>
              <td><%= @customer.postal_code %></td>
            </tr>
            <tr>
              <th>住所</th>
              <td><%= @customer.address %></td>
            </tr>
            <tr>
              <th>電話番号</th>
              <td><%= @customer.telephone_number %></td>
            </tr>
            <tr>
              <th>カテゴリー</th>
              <td>
                <% if @customer.is_student == true %>
                  <span class="admins-customers__show-table--student-true"></span>
                  <%= "学生" %>
                <% else %>
                  <span class="admins-customers__show-table--student-false"></span>
                  <%= "企業" %>
                <% end %>
              </td>
            </tr>
            <tr>
              <th>ステータス</th>
              <td>
                <% if @customer.is_active == true %>
                  <%= "有効会員" %>
                <% else %>
                  <%= "退会者" %>
                <% end %>
              </td>
            </tr>
            <tr>
              <th>登録日</th>
              <td><%= @customer.created_at.strftime("%Y-%m-%d %H:%M") %></td>
            </tr>
          </table>
        </div>

        <div class="col-sm-9">
          <div>
            <span class="admins-customers__show-challenge-count">総チャレンジ投稿数：</span>
            <span><%= @posted_infos.count.to_s(:delimited) %></span>
          </div>

          <table class="table table-hover">
            <tr class="admins-customers__show-table">
              <th class="admins-customers__show-table--header">チャレンジ投稿日</th>
              <th class="admins-customers__show-table--header">チャレンジ内容</th>
              <th class="admins-customers__show-table--header">記事タイトル</th>
              <th class="admins-customers__show-table--header"></th>
            </tr>

            <% @posted_infos.each do |posted_info| %>
              <tr>
                <td><%= posted_info.created_at.strftime("%Y-%m-%d %H:%M") %></td>
                <td><%= posted_info.comment %></td>
                <td><%= posted_info.article.title %></td>
                <td><%= link_to "記事を見る", admins_article_path(posted_info.article.id), class: "btn btn-xs btn-primary" %></td>
              </tr>
            <% end %>
          </table>

          <div><%= paginate @posted_infos %></div>

          <div class="admins-customers__show-actions">
            <span class="admins-customers__show-actions--back">
              <%= link_to "会員一覧へ戻る", admins_customers_path, class: "btn btn-warning" %>
            </span>
            <span class="admins-customers__show-actions--favorite">
              <%= link_to "Seekへ", admins_favorite_customer_path, class: "btn btn-success" %>
            </span>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>