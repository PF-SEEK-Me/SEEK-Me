
<!--css => app/assets/stylesheets/sign-in.scss-->

<div class="sign-in">
  <h2>Sign In</h2>

  <%= form_with model: @admin, url: admin_session_path, local: true do |f| %>
    <div class="container">
      <div class="row">
        <div class="sign-in__email-field">
          <div class="col-sm-2">
            <%= f.label "メールアドレス" %>
          </div>
          <div class="col-sm-10">
            <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
          </div>
        </div>
      </div>

      <div class="row">
        <div class="sign-in__password-field">
          <div class="col-sm-2">
            <%= f.label "パスワード" %>
          </div>
          <div class="col-sm-10">
            <%= f.password_field :password, autocomplete: "current-password" %>
          </div>
        </div>
      </div>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="sign-in__remember-field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>

    <div class="sign-in__actions">
      <%= f.submit "Sign In", class: "btn btn-success", style: "padding: 5px 30px;" %>
    </div>
  <% end %>

  <%= link_to "パスワードを忘れた方はこちら", "password/new" %>

</div>
