
<!--css => app/assets/stylesheets/admins/admins-sign-up.scss-->

<div class="admins-sign-up">
  <h2>Sign Up</h2>

  <%= form_with model: @admin, url: admin_registration_path, local: true do |f| %>
    <%= render "admins/shared/error_messages", resource: resource %>

    <div class="container-fluid">
      <div class="row">
        <div class="admins-sign-up__form">
          <div class="col-sm-4">
            <%= f.label "メールアドレス" %>
          </div>
          <div class="col-sm-8">
            <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
          </div>
        </div>
      </div>

      <div class="row">
        <div class="admins-sign-up__form">
          <div class="col-sm-4">
            <%= f.label "パスワード" %>
            <% if @minimum_password_length %>
              <span class="admins-sign-up__password-limit">(<%= @minimum_password_length %>文字以上)</span>
            <% end %>
          </div>
          <div class="col-sm-8">
            <%= f.password_field :password, autocomplete: "new-password" %>
          </div>
        </div>
      </div>

      <div class="row">
        <div class="admins-sign-up__form">
          <div class="col-sm-4">
            <%= f.label "確認用パスワード" %>
          </div>
          <div class="col-sm-8">
            <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
          </div>
        </div>
      </div>
    </div>

    <div class="admins-sign-up__actions">
      <%= f.submit "Sign Up", class: "btn btn-success", style: "padding: 5px 30px;" %>
    </div>
  <% end %>

</div>