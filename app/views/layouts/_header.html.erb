<div class="header">
  <div class="header__logo"></div>
  <% if admin_signed_in? %>
    <div class="header__user-name">
      <%= "ようこそ、管理人さん！" %>
    </div>
    <nav class="header__nav">
      <ul class="header__nav-mainList">
        <li class="header__nav-li">
          <%= link_to "" do %>
            <span>News</span>
          <% end %>
        </li>
        <li class="header__header-nav-li">
          <%= link_to "" do %>
            <span>Genres</span>
          <% end %>
        </li>
        <li class="header__header-nav-li">
          <%= link_to "" do %>
            <span>Customers</span>
          <% end %>
        </li>
        <li class="header__header-nav-li">
          <%= link_to destroy_admin_session_path do %>
            <span>Sign Out</span>
          <% end %>
        </li>
      </ul>
    </nav>
  <% elsif customer_signed_in? %>
    <div class="header__user-name">
      <%= "ようこそ、" + (current_customer_last_name + current_customer_first_name) %>
    </div>
    <nav class="header__nav">
      <ul class="header__nav-mainList">
        <li class="header__nav-mainItem">
          <%= link_to "" do %>
            <span>About Us</span>
          <% end %>
        </li>
        <li class="header__nav-mainItem">
          <%= link_to "" do %>
            <span>News</span>
          <% end %>
        </li>
        <li class="header__nav-mainItem">
          <%= link_to "" do %>
            <span>My Page</span>
          <% end %>
        </li>
        <li class="header__nav-mainItem">
          <%= link_to destroy_customer_session_path do %>
            <span>Sign Out</span>
          <% end %>
        </li>
      </ul>
    </nav>
  <% else %>
    <div class="header__user-name">
      <%= "" %>
    </div>
    <nav class="header__nav">
      <div class="header__nav-main">
        <ul class="header__nav-mainList">
          <li class="header__nav-mainItem">
            <%= link_to "" do %>
              <span class="header__nav-mainItem--item">About Us</span>
            <% end %>
          </li>
          <li class="header__nav-mainItem">
            <%= link_to "" do %>
              <span class="header__nav-mainItem--item">News</span>
            <% end %>
          </li>
          <li class="header__nav-mainItem">
            <%= link_to new_customer_registration_path do %>
              <span class="header__nav-mainItem--item">Sign Up</span>
            <% end %>
          </li>
          <li class="header__nav-mainItem">
            <%= link_to new_customer_session_path do %>
              <span class="header__nav-mainItem--item">Sign In</span>
            <% end %>
          </li>
        </ul>
      </div>
    </nav>
  <% end %>
</div>