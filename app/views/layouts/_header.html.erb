<div class="header">
  <div class="header__logo"></div>
  <% if admin_signed_in? %>
    <div class="header__user-name">
      <%= "ようこそ、管理人さん！" %>
    </div>
    <nav class="header__nav">
      <div class="header__nav-main">
        <ul class="header__nav-mainList">
          <li class="header__nav-mainItem">
            <%= link_to admins_articles_path do %>
              <span class="header__nav-mainItem--item">Articles</span>
            <% end %>
          </li>
          <li class="header__nav-mainItem">
            <%= link_to admins_genres_path do %>
              <span class="header__nav-mainItem--item">Genres</span>
            <% end %>
          </li>
          <li class="header__nav-mainItem">
            <%= link_to admins_customers_path do %>
              <span class="header__nav-mainItem--item">Customers</span>
            <% end %>
          </li>
          <li class="header__nav-mainItem">
            <%= link_to destroy_admin_session_path, method: :delete do %>
              <span class="header__nav-mainItem--item">Sign Out</span>
            <% end %>
          </li>
        </ul>
      </div>
    </nav>
  <% elsif customer_signed_in? %>
    <div class="header__user-name">
      <%= "ようこそ、" + (current_customer_last_name + current_customer_first_name) %>
    </div>
    <nav class="header__nav">
      <div class="header__nav-main">
        <ul class="header__nav-mainList">
          <li class="header__nav-mainItem">
            <%= link_to "" do %>
              <span class="header__nav-mainItem--item">About Us</span>
            <% end %>
          </li>
          <li class="header__nav-mainItem">
            <%= link_to "" do %>
              <span class="header__nav-mainItem--item">Articles</span>
            <% end %>
          </li>
          <li class="header__nav-mainItem">
            <%= link_to "" do %>
              <span class="header__nav-mainItem--item">My Page</span>
            <% end %>
          </li>
          <li class="header__nav-mainItem">
            <%= link_to destroy_customer_session_path do %>
              <span class="header__nav-mainItem--item">Sign Out</span>
            <% end %>
          </li>
        </ul>
      </div>
    </nav>
  <% else %>
    <div class="header__user-name">
      <%= "" %>
    </div>
    <nav class="header__nav">
      <div class="header__nav-main">
        <ul class="header__nav-mainList">
          <li class="header__nav-mainItem">
            <%= link_to "" do %>
              <span class="header__nav-mainItem--item">About Us</span>
            <% end %>
          </li>
          <li class="header__nav-mainItem">
            <%= link_to admins_articles_path do %>
              <span class="header__nav-mainItem--item">Articles</span>
            <% end %>
          </li>
          <li class="header__nav-mainItem">
            <%= link_to new_customer_registration_path do %>
              <span class="header__nav-mainItem--item">Sign Up</span>
            <% end %>
          </li>
          <li class="header__nav-mainItem">
            <%= link_to new_customer_session_path do %>
              <span class="header__nav-mainItem--item">Sign In</span>
            <% end %>
          </li>
        </ul>
      </div>
    </nav>
  <% end %>
</div>