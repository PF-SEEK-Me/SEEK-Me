
<!--css => app/assets/stylesheets/customers/seeks.scss-->

<div class="customers">
  <h3 class="customers__title">Seek You!</h3>

  <div class="customers__seeks-table">
    <h4><%= current_customer.last_name + current_customer.first_name %>　さんが気になった学生</h4>
    <table class="table table-hover">
      <tr class="customers__seeks-table-header">
        <th class="customers__seeks-table-header">氏名</th>
        <th class="customers__seeks-table-header">性別</th>
        <th class="customers__seeks-table-header">年齢</th>
        <th class="customers__seeks-table-header">チャレンジ内容</th>
        <th class="customers__seeks-table-header"></th>
      </tr>

      <% @seeks.each do |seek| %>
        <tr>
          <td><%= seek.post_challenge.customer.last_name + seek.post_challenge.customer.first_name %></td>
          <td><%= seek.post_challenge.customer.gender %></td>
          <td><%= seek.post_challenge.customer.age %></td>
          <td>
            <%= seek.post_challenge.comment %>
          </td>
          <td><%= link_to "チャレンジ履歴を見る", "#", class: "btn btn-sm btn-primary" %></td>
        </tr>
      <% end %>
    </table>
  </div>
</div>