<!--css => app/assets/stylesheets/customers/customers.scss-->

<div class="customers">
  <h3 class="customers__title">My Page　編集</h3>

  <%= form_with model: @customer, local: true do |f| %>
    <div class="customers__edit">
      <div class="container">
        <div class="row">
          <div class="customers-sign-up__field">
            <div class="col-sm-2">
              <%= f.label "氏名" %>
            </div>
            <div class="col-sm-10">
              <%= "（姓）　" %>
              <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %>
              <%= "　　　　　　" %>
              <%= "（名）　" %>
              <%= f.text_field :first_name, autocomplete: "first_name" %>
            </div>
          </div>
        </div>

        <div class="row">
          <div class="customers-sign-up__field">
            <div class="col-sm-2">
              <%= f.label "フリガナ" %>
            </div>
            <div class="col-sm-10">
              <%= "（セイ）" %>
              <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana" %>
              <%= "　　　　　　" %>
              <%= "（メイ）" %>
              <%= f.text_field :first_name_kana, autocomplete: "first_name_kana" %>
            </div>
         </div>
        </div>

        <div class="row">
          <div class="customers-sign-up__field">
            <div class="col-sm-2">
              <%= f.label "性別" %>
            </div>
            <div class="col-sm-10">
              <span class="customers-sign-up__gender-field">
                <%= "　　　　" %>
                <%= f.label "男性 " %>
                <%= f.radio_button :gender, "男性", checked: true %>
              </span>
              <span class="customers-sign-up__genders-field">
                <%= "　　　　" %>
                <%= f.label "女性 " %>
                <%= f.radio_button :gender, "女性" %>
              </span>
            </div>
          </div>
        </div>

        <div class="row">
          <div class="customers-sign-up__field">
            <div class="col-sm-2">
              <%= f.label "年齢" %>
            </div>
            <div class="col-sm-10">
              <%= "　　　　" %>
              <%= f.text_field :age, autocomplete: "age" %>
            </div>
          </div>
        </div>

        <div class="row">
          <div class="customers-sign-up__field">
            <div class="col-sm-2">
              <%= f.label "メールアドレス" %>
            </div>
            <div class="col-sm-10">
              <%= "　　　　" %>
              <%= f.email_field :email, autocomplete: "email" %>
            </div>
          </div>
        </div>

        <div class="row">
          <div class="customers-sign-up__field">
            <div class="col-sm-2">
              <%= f.label "郵便番号" %><span class="customers-sign-up__attention">(ハイフンなし)</span>
            </div>
            <div class="col-sm-10">
              <%= "　　　　" %>
              <%= f.text_field :postal_code, autocomplete: "postal_code" %>
            </div>
          </div>
        </div>

        <div class="row">
          <div class="customers-sign-up__field">
            <div class="col-sm-2">
              <%= f.label "住所" %>
            </div>
            <div class="col-sm-10">
              <%= "　　　　" %>
              <%= f.text_field :address, autocomplete: "address", style: "width: 450px;" %>
            </div>
          </div>
        </div>

        <div class="row">
          <div class="customers-sign-up__field">
            <div class="col-sm-2">
              <%= f.label "電話番号" %><span class="customers-sign-up__attention">(ハイフンなし)</span>
            </div>
            <div class="col-sm-10">
              <%= "　　　　" %>
              <%= f.text_field :telephone_number, autocomplete: "telephone_number" %>
            </div>
          </div>
        </div>

        <div class="row">
          <div class="customers-sign-up__field">
            <div class="col-sm-2">
              <%= f.label "区分" %>
            </div>
            <div class="col-sm-10">
              <span class="customers-sign-up__is-student-field--select">
                <%= "　　　　" %>
                <%= f.label "学生 " %>
                <%= f.radio_button :is_student, true, checked: true %>
              </span>
              <span class="customers-sign-up__is-student-field--select">
                <%= "　　　　" %>
                <%= f.label "社会人 " %>
                <%= f.radio_button :is_student, false %>
              </span>
            </div>
          </div>
        </div>
      </div>

      <div class="customers__edit-actions">
        <div class="customers__edit-actions--submit">
          <%= f.submit "変更を保存する", class: "btn btn-success", style: "padding: 5px 30px;" %>
        </div>
        <div class="customers__edit-actions--back">
          <%= link_to "戻る", customer_path, class: "btn btn-warning", style: "padding: 5px 30px;" %>
        </div>
      </div>
    </div>
  <% end %>
</div>
